{
  "name": "dmc-inventory",
  "version": "1.14.0",
  "description": "Disaster Management Center Inventory System",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "icon:generate": "node scripts/generate-icons.js",
    "prebuild": "npm run icon:generate"
  },
  "keywords": [
    "inventory",
    "disaster-management",
    "electron"
  ],
  "author": "Manula Sameera",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "png-to-ico": "^1.0.0",
    "sharp": "^0.32.1",
    "to-ico": "^1.1.5"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "fontkit": "^2.0.4",
    "pdfkit": "^0.17.2"
  },
  "build": {
    "appId": "com.dmc.inventory",
    "productName": "DMC Inventory System",
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "node_modules/better-sqlite3",
        "to": "better-sqlite3",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}
